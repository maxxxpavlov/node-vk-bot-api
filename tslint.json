{
    "extends": ["tslint-config-airbnb"],
    "rules": {
        "max-line-length": {
            "options": [140]
        },
        "new-parens": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
        "no-console": {
            "severity": "warning",
            "options": ["debug", "info", "log", "time", "timeEnd", "trace"]
        },
        "import-name": false,
        "align": false,
        "trailing-comma": false
    },
    "jsRules": {
        "max-line-length": {
            "options": [120]
        }
    }
}